// This is a test scene for Specter.  Try running "specter test.scn".

xres 512
yres 512
filename "image.ppm"
SamplesPerPixel 16
DOFSample 16
MotionBlurSample 16

camera aperature {
  eye [ -24.0, -2.0, 5.2 ]
  lookat [ 1.0, 1.0, 2.4 ]
  up [ 0.0, 0.0, 1.0 ]
  hfov 22.0
	
	lensRadius 1.5
//	lensRadius 0.0
	
	focalDistance 0.7
//	imageDistance 7.0  // focus on 30 = blue ball
	imageDistance 6.4  // focus on 25 = red ball
	start_time 0
	end_time 4
}

background constant {
  color [ 0.5, 0.8, 0.9 ]
}

ambient [ 0.6, 0.6, 0.6 ]

light point {
  position [ -30.0, -20.0, 80.0 ]
  color [ 0.7, 0.9, 0.9 ]
}

light point {
  position [ -20.0, -50.0, 40.0 ]
  color [ 0.6, 0.1, 0.1 ]
}

scene group {
	polygon {
		material lambertian {
			color [ 0.0, 0.64, 0.0]
			Kd 0.7
			Ka 0.4
			Ks 0.3
			alpha 30 
		}
		
		point_list {
			[4.0, -1.0, 2.5]
			[5.0,  1.0, 5.5]
			[1.3, -3.4, 5.5] 
			[6.3, -2.4, 6.5]
		}
		
		face_list {
		  [0, 1, 2]
			[0, 2, 3]
			[0, 3, 1]
			[1, 2, 3]
		}
	}
	
  // blue sphere
  sphere {
    material lambertian {
      color [ 0.1, 0.3, 0.9 ]
      Kd 0.7
      Ka 0.3
			Ks 0.7
			alpha 200
    }
    center [ 5.5, 3.5, 4.0 ]
    radius 2.4
	}

  // red sphere
  sphere {
    material lambertian {
      color [ 1.0, 0.2, 0.2 ]
      Kd 0.7
      Ka 0.3
			Ks 0.5
			alpha 50
    }
    center [ 1.5, -1.5, 2.0 ]
    radius 1.8
  }

  // yellow sphere
  sphere {
   material lambertian {
      color [ 1.0, 0.9, 0.1 ]
      Kd 0.6
      Ka 0.4
			Ks 0.3
			alpha 100
   }
    center [ -4.0, 0.2, 1.7 ]
    radius 1.0
		velocity [-2.0, 1.5, 0.5]
		start_time 1.0
		end_time 2.5
  }

	 sphere {
		material lambertian {
			color 1.0
			Kd 0.5
			Ka 0.5
			Ks 0.9
			alpha 300
		}
		center [ 25.0, 25.0, 120.0 ]
		radius 10.0
		velocity [1.4, -0.2, 0]
	}

  plane {
    material lambertian {
      color [ 0.4, 0.4, 0.7 ]
      Kd 0.4
			//Kd 0.0
      Ka 0.6
			Ks 0.75
			//Ks 0.0
			alpha 60
   }
    normal [ 0.0, 0.0, 1.0 ]
    point [ 0.0, 0.0, -0.1 ]
  }
}
